{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["src", "server"],
  "exclude": ["node_modules", "dist"]
}
